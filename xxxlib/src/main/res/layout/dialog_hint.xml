<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/shape_white_8"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="100"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="温馨提示" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="xxx" />
    </LinearLayout>

    <View style="@style/LineGray" />

    <LinearLayout
        android:id="@+id/llLeftRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btLeft"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_button_left"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="xxx" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="48dp"
            android:background="@color/line_gray" />

        <Button
            android:id="@+id/btRight"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_button_right"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="xxx" />
    </LinearLayout>

    <Button
        android:id="@+id/btCenter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/dialog_hint_button_center"
        android:gravity="center"
        tools:text="xxx" />
</LinearLayout>