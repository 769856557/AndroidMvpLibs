<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 启动界面主题样式-->
    <style name="ActivityLuanchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/holo_blue_light</item>
    </style>

    <!--按钮样式-->
    <style name="ButtonStylePrimary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@drawable/selector_primary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!--横线样式-->
    <style name="LineGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_gray</item>
    </style>

</resources>