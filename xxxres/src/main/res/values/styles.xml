<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 基础主题样式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorAccent">@color/app_primary</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:textColor">@color/text_333333</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <!-- 启动界面主题样式-->
    <style name="ActivityLuanchTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/holo_blue_light</item>
    </style>

    <!-- Activity切换动画 -->
    <style name="ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>

    <!--按钮主样式-->
    <style name="ButtonStylePrimary" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@drawable/selector_primary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!--横线灰色样式-->
    <style name="LineGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_gray</item>
    </style>

</resources>